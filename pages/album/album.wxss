/* pages/album/album.wxss */
@import '../tpls/title/title_tpl.wxss';
.title{
   margin-bottom: 40rpx;
}
.album-title{
  margin-top: 12rpx;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  font-weight: bold;
  font-size: 64rpx;
}
.photo-list{
  padding-left: 2rpx;
  padding-right: 4rpx;
}
.photo-list::after{
  content: '';
  clear: both;
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
}
.photo-detail{
  width: 242rpx;
  height: 242rpx;
  float: left;
  margin-left: 6rpx;
  background: #212121;
  margin-bottom: 6rpx;
  
}
.photo-detail image{
  width: 242rpx;
  height: 242rpx;
}
.empty{

}
.empty-img{
  width: 100%;
  height: 400rpx;
  margin-top: 89rpx;

}
.empty-tip1{
  font-size: 40rpx;
color: #302C48;
font-weight: bold;
text-align: center;
margin-bottom: 26rpx;
}
.empty-tip2{
  font-size: 30rpx;
  color: #302C48;
  line-height: 50rpx;
  text-align: center;
}
.add-btn{
background: linear-gradient(-45deg, #FE51A0 0%, #FF6262 100%);
box-shadow: 0 26rpx 50rpx 0 #FFA5BB;
border-radius: 200rpx;
width: 244rpx;
height: 88rpx;
margin: 70rpx auto;
font-size: 30rpx;
color: #FFFFFF;
line-height: 88rpx;
text-align: center;
}




