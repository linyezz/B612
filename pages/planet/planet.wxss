.planet-list{
height: 1032rpx;
overflow: hidden;
}
.swiper{
  overflow: visible;
}
.swiper-item{
  padding-top: 1rpx;
  height: 600rpx;
  overflow: visible;
}
.galaxien{
  position: absolute;
  bottom: 106rpx;
  right: -78rpx;
  display: -webkit-box;
  -webkit-box-align: center;
}
.galaxien-icon image{
  width: 52rpx;
  height: 20rpx;

}
.galaxien-icon-name{
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 45rpx;
  margin-left: 8rpx;
}
.single-cont{
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 45rpx;
  padding: 32rpx 40rpx 0 40rpx;
  position: fixed;
  top: 106rpx;
}
.add-icon{
  width: 93rpx;
  height: 93rpx;
  position: absolute;
  bottom: 35rpx;
  right: 35rpx;
}
.layer{
  position: fixed;
  top: 0;
  left: 0;
  border: 0;
  right: 0;
  bottom: 0;
  background: #141E3F;
}

