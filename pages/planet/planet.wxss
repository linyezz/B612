/* pages/planet/planet.wxss */
@import '../tpls/title/title_tpl.wxss';
.title{
  color: #fff;
  padding-top: 0;
  line-height: normal;
}
page {
  background: #132035;
}

.planet-container {
   
  background: url(http://ztest2-pic.miliyo.com/mp/i/B612/plant_bg.png) no-repeat;
  background-size:100% auto; 
}

.planet-title {
  font-size: 64rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 60rpx;
  padding-top: 14rpx;
  padding-left: 40rpx;
}

.planet-detail {
  width: 543rpx;
  height: 543rpx;
  border-radius: 50%;
  border: 2rpx solid #FCB5D9;
  margin-top: 140rpx;
  margin-left: 81rpx;
  position: relative;
  box-shadow: 0 0 43rpx 0 #FE4F7A, inset 0 1rpx 43rpx 0 #8A73FF;

}

.planet-mian {
  width: 348rpx;
  height: 348rpx;
  border-radius: 50%;
  /* background: #d7d7d7; */
  margin: 90rpx auto;
  box-shadow: 0 0 43rpx 7rpx #71b0ff,inset 0 1rpx 43rpx 0 #FE4F7A;
  position: relative;
  padding: 1rpx;
}
.bg-img{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.outside-img{
  position: absolute;
  width: 309rpx;
  height:268rpx;
  bottom: 17rpx;
  left: 20rpx;
  z-index: 3;
}
.user-img{
  width: 224rpx;
  height: 224rpx;
  display: inline-block;
  margin-top:53rpx;
  margin-left: 57rpx; 
  border-radius: 50%;
}

.planet-trank{
  position: absolute;
  width: 528rpx;
  height: 528rpx;
  border-radius: 50%;
  top: 0;
  left: 0;
  
}
.trank-inside{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
 -webkit-animation: rotateScale 50s linear infinite;
 
}
.planet-friend {
  
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: url(http://ztest2-pic.miliyo.com/mp/i/B612/head_big.png) no-repeat;
  background-size:100% 100%; 
  bottom: 5rpx;
  left: 5rpx;
  
}
.planet-friend image{
  width: 104.8rpx;
  height: 104.8rpx;
  display: block;
  margin: 7.7rpx auto;
  border-radius:50%;
}

swiper-item{
   /* height: 900rpx;  */
  overflow: visible;
}
swiper swiper-item{
  height: 70%;
}
